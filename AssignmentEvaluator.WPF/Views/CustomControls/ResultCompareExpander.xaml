<UserControl x:Class="AssignmentEvaluator.WPF.Views.CustomControls.ResultCompareExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssignmentEvaluator.WPF.Views.CustomControls"
             mc:Ignorable="d" 
             x:Name="_resultCompareExpander"
             d:DataContext="{d:DesignInstance Type=local:ResultCompareExpander}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Expander Header="{Binding ElementName=_resultCompareExpander, Path=Header}" FontSize="16">
        <StackPanel Orientation="Horizontal">
            <TextBlock                     
                Background="LightGreen" 
                Width="395" 
                Text="{Binding ElementName=_resultCompareExpander, Path=Answer}" TextWrapping="Wrap" />
            <Border BorderThickness="1" Margin="0 0 5 0" BorderBrush="Black" />
            <TextBlock 
                TextWrapping="Wrap"
                Width="400" Text="{Binding ElementName=_resultCompareExpander, Path=Result}"/>
        </StackPanel>
    </Expander>
</UserControl>
